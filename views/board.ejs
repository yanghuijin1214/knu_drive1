      <link rel="stylesheet" href="/css/boardDark.css">
      <%}else{%>
      <link rel="stylesheet" href="">
      <%}%>
    </head>
<body>

  <div class="header">
    게시판
</div>
    

    <div class="container">
    <table class="table table-striped table-hover" >
        <thead>
            <tr>
                <th>번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>날짜</th>
            </tr>
        </thead>
        <!--style="cursor: pointer;"-->
        <tbody >
            <% for(var i=0; i<boards.length; i++){ %>
                    <tr onclick="window.location.href ='/room/<%=room%>/board/<%=boards[i]._id%>';">
                        <td><%= i+1 %></td>
                        <td><%=boards[i].title%></td>
                        <td><%=boards[i].userid.username %></td>
                        <td><%=boards[i].datePosted.toDateString()%></td>
                    </tr>
                <%}%>
        </tbody>
    </table>

    <div>
    <a href = "/room/<%=room%>/boards/upload" class="btn btn-primary float-end">글쓰기</a>
    </div>
